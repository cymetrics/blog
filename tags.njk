---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: zh-tw/layouts/common.njk
eleventyComputed:
  title: "{{ tag }}"
permalink: /tags/{{ tag | slug }}/
